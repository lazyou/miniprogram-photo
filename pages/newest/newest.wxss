.item {
  padding-bottom: 1em;
  margin-left: 10rpx;
  margin-right: 10rpx;
}

.item .image{
  width: 100%;
  height: 800rpx;
  border-top-left-radius: 0.5em;
  border-top-right-radius: 0.5em;
}

.item .text{
  margin-top: -15rpx;
  color: white;
  overflow:hidden;
  white-space:nowrap;
  background-color: black;
  opacity:0.8;
  padding: 5rpx;
  border-bottom-right-radius: 0.5em;
  border-bottom-left-radius: 0.5em;
}
