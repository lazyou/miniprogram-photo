/**index.wxss**/
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo .tip {
  font-size: 32rpx;
  color: #aaa;
  text-align: center;
  padding: 30rpx;
}

.userinfo .button {
  width: 7em;
  font-size: 38rpx;
  color: white;
  background-color: red;
  border-top-left-radius:2em;
  border-top-right-radius:2em;
  border-bottom-right-radius:2em;
  border-bottom-left-radius:2em;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.usermotto {
  margin-top: 200px;
}